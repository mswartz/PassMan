  <!-- Project Libraries -->
  
  <path id="library.org.beryx:text-io:3.3.0.classpath">
    <pathelement location="${basedir}/lib/awt-color-factory-1.0.0.jar"/>
    <pathelement location="${basedir}/lib/jline-2.14.5.jar"/>
    <pathelement location="${basedir}/lib/slf4j-api-1.7.25.jar"/>
    <pathelement location="${basedir}/lib/text-io-3.3.0.jar"/>
  </path>
  
  <path id="library.org.jasypt:jasypt:1.9.2.classpath">
    <pathelement location="${basedir}/lib/jasypt-1.9.2.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_passman.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.passman" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.passman" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.passman:jar" value="${basedir}/out/artifacts/PassMan_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.PassMan.jar" value="${artifacts.temp.dir}/PassMan.jar"/>
  </target>
  
  <target name="artifact.passman:jar" depends="init.artifacts, compile.module.passman" description="Build &#39;PassMan:jar&#39; artifact">
    <property name="artifact.temp.output.passman:jar" value="${artifacts.temp.dir}/PassMan_jar"/>
    <mkdir dir="${artifact.temp.output.passman:jar}"/>
    <jar destfile="${temp.jar.path.PassMan.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/src/main/resources/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset dir="${passman.output.dir}"/>
      <zipfileset src="${basedir}/lib/jasypt-1.9.2.jar"/>
      <zipfileset src="${basedir}/lib/text-io-3.3.0.jar"/>
      <zipfileset src="${basedir}/lib/slf4j-api-1.7.25.jar"/>
      <zipfileset src="${basedir}/lib/jline-2.14.5.jar"/>
      <zipfileset src="${basedir}/lib/awt-color-factory-1.0.0.jar"/>
      <zipfileset file="${basedir}/lib/text-io-3.3.0.jar"/>
      <zipfileset file="${basedir}/lib/slf4j-api-1.7.25.jar"/>
      <zipfileset file="${basedir}/lib/jline-2.14.5.jar"/>
      <zipfileset file="${basedir}/lib/awt-color-factory-1.0.0.jar"/>
      <zipfileset file="${basedir}/lib/jasypt-1.9.2.jar"/>
    </jar>
    <copy file="${temp.jar.path.PassMan.jar}" tofile="${artifact.temp.output.passman:jar}/PassMan.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.passman:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.passman:jar}"/>
    <copy todir="${artifact.output.passman:jar}">
      <fileset dir="${artifact.temp.output.passman:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>